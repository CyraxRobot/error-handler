{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "lib": [
      "es2020",
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es2020",
    "outDir": "./lib",
    "allowJs": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "alwaysStrict": true
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
